<div data-table class="container-flex--scroll">
  {{#if (has-block)}}
    {{yield (hash
        content=(component "au-data-table-content" content=@content noDataMessage=this.noDataMessage enableSelection=this.enableSelection enableLineNumbers=this.enableLineNumbers onClickRow=(optional @onClickRow) data-table=this class="container-flex--scroll")
      )
        this}}
  {{else}}
    <AuDataTableContent content={{@content}} noDataMessage={{this.noDataMessage}} enableSelection={{this.enableSelection}} enableLineNumbers={{this.enableLineNumbers}} onClickRow={{optional @onClickRow}} data-table={{this}} class="container-flex--scroll" />
  {{/if}}
</div>

{{#if @content}}
  <div class="au-c-data-table__actions au-c-data-table__actions--bottom">
    <AuDataTableNumberPagination
      @page={{this.page}}
      @size={{this.size}}
      @nbOfItems={{@content.length}}
      @sizeOptions={{this.sizeOptions}}
      @total={{@content.meta.count}}
      @links={{@content.meta.pagination}}
    />
  </div>
{{/if}}
